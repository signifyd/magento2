<?xml version="1.0" encoding="UTF-8"?>

<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SignifydUnholdOrder">
        <annotations>
            <description>Unhold admin order.</description>
        </annotations>

        <click selector="{{AdminOrderDetailsMainActionsSection.unhold}}" stepKey="unholdOrder"/>
        <click selector="{{AdminSignifydSection.unholdButton}}" stepKey="confirmUnholdOrder"/>
        <waitForPageLoad stepKey="waitForPageLoad" />
    </actionGroup>
</actionGroups>
