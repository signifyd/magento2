<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="SignifydSuccessPassiveModeTest" extends="SignifydSuccessPostAuthCaseTest">
        <annotations>
            <features value="Sales"/>
            <stories value="Passive mode do nothing positive action"/>
            <title value="Passive mode do nothing positive action"/>
            <description value="Validate Passive mode"/>
            <severity value="CRITICAL"/>
            <group value="checkout"/>
        </annotations>
        <before>
            <!-- Set Signifyd passive mode -->
            <magentoCLI command="config:set {{SignifydEnableConfig.path}} {{SignifydEnableConfig.passive}}" stepKey="enableExtension"/>

            <!-- Set Signifyd positive action-->
            <magentoCLI command="config:set {{GuaranteePositiveAction.path}} {{GuaranteePositiveAction.nothing}}" stepKey="setPositiveAction"/>

            <!-- Set Signifyd negative action to cancel to Signifyd put order on hold -->
            <magentoCLI command="config:set {{GuaranteeNegativeAction.path}} {{GuaranteeNegativeAction.cancel}}" stepKey="setNegativeAction"/>
        </before>

        <!-- Cron run -->
        <wait stepKey="waitCaseToBeCreatedOnSignifyd" time="25" before="goToOrdersPage"/>
        <magentoCLI command="cron:run" stepKey="cronRun" before="goToOrdersPage"/>
        <wait stepKey="waitCronRun" time="15" before="goToOrdersPage"/>

        <!-- Assert that the case was accepted -->
        <see selector="{{AdminSignifydSection.signifydDecision}}" userInput="ACCEPT" stepKey="seeCaseCreated"/>
        <!-- Assert that the order is not on hold due to passive mode -->
        <see selector="{{AdminSignifydSection.magentoOrderStatus}}" userInput="Pending" stepKey="seeOrderStatus"/>
    </test>
</tests>